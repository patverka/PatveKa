<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RootLayoutStyle">
        <item name="android:background">@color/brand_color</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="FillButtonColoredStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/accent_color</item>
        <item name="rippleColor">?android:colorControlHighlight</item>
    </style>

    <style name="OutlineButtonDefaultStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/accent_color</item>
        <item name="rippleColor">?android:colorControlHighlight</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">@dimen/_1dp</item>
    </style>

    <style name="TextButtonDefaultStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">?android:colorControlHighlight</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStartWithNavigation">58dp</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="ToolbarTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>